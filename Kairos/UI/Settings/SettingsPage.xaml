<Page
    x:Class="Kairos.UI.Settings.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kairos.UI.Settings"
    Loaded="Page_Loaded"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource KairosPageBackgroundBrush}"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="tbThemeHeader"
                   Text="Darktheme"/>
        <ToggleSwitch x:Name="scEnableDarkMode"
                      Toggled="ScEnableDarkMode_Toggled"/>
    </StackPanel>
</Page>
