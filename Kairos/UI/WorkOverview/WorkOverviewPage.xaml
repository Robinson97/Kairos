<Page
    x:Class="Kairos.UI.WorkOverview.WorkOverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:baseStyle="using:Kairos.UI.Styles.Controls.Base"
    xmlns:local="using:Kairos.UI.WorkOverview"
    xmlns:ap="using:Kairos.UI.Styles.Controls.Textfield.AttachedPropertys"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource KairosPageBackgroundBrush}">
    <!--Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"-->
    <StackPanel>
        <TextBox Text="" 
                 ap:TextBoxValidator.RegexValidator="^[0-9]*$"
                 ap:TextBoxValidator.ErrorControlName="errorMsg"/>
        
        <TextBlock Foreground="Red" Text="FEEEEEEEEEEEEEHHHHHHHHHHHLER" x:Name="errorMsg"/>
        <Button x:Name="btnStartCamera"
                Click="BtnStartCamera_Click"/>
    </StackPanel>
</Page>
